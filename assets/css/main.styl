section.social
	background-color: #f4f4f4;
	height 650px
	width 100%
	display table
	
	> .wrap
		width 960px
		margin 0px auto
		padding 0px 10px 0px 10px
		position relative
		text-align center
		display table-cell
		vertical-align middle
				
		> .links
			margin-bottom 75px
		
		> .links > a
			width 56px
			height 56px
			display inline-block
			text-align center
			border-radius 50% 50%
			border: 3px solid #545454;
			padding-top 12px
			margin-right 35px
			
			> img
				vertical-align middle

		> .links > a:last-child
			margin-right 0px
			
		form 
			color: #545454;
			
			.formgroup
				display: inline-block;
				position: relative;
				
				> label
					margin-right 10px
					font-family "OpenSansBoldItalic"
					font-size: 16px;
					
				> input 
					border-radius 5px
					border none
					outline none
					padding 9px
					font-size: 14px;
					color: #545454;
					width 220px
					
				> input + img
					position absolute
					right 10px
					top 50%
					margin-top -7px

				
section.footer
	text-align center
	font-size 12px
	height 100px
	line-height 100px
	
	> p span
		color: #6dc5ea;
		font-size 12px
	
section.menu
	display none
	background-color: #f3787a;
	opacity 0.9
	width 100%
	height 100%
	position fixed
	left 0
	top 0
	
	> .wrap
		max-width 960px
		margin 0px auto
		padding 0px 10px 0px 10px
		position relative
		text-align center
		display block
		
		> .close-menu
			background url("../images/close-button.png")
			width 21px
			height 22px
			position: absolute;
			right: 16px;
			top: 28px;

		> .menu
			display table-cell
			vertical-align middle
			
			> a
				color white
				font-size: 18px;
				font-family "OpenSansBoldItalic"
				
				> img 
					padding 10px
					background white
					border-radius 50%
			
@media screen and (max-width: 768px)

	section.meet > .wrap

		> .logo 
			margin 0px auto

		> .open-menu
			right 40px

		> .slogan
			text-align center

			> p
				line-height 40px
				margin 10px 0px 75px 0px
				
	section.description