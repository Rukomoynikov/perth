*, *:after, *:after
	box-sizing border-box
	
html,body
	font-family "OpenSansRegular"
	overflow-x hidden
	
section.meet
	background-image url("../images/header-bg.jpg")
	height 650px
	width 100%
	overflow-y hidden
	
	> .wrap 
		max-width 960px
		margin 0px auto
		padding 0px 10px
		position relative
	
		> .logo
			width 100px
			height 100px
			background url("../images/p-logo.png") white
			box-shadow 15px 15px 0px rgba(13, 169, 229, 0.7)
			background-repeat no-repeat
			background-position 50% 50%

		> .logo:after
			content " "
			display block
			position absolute
			top 100px
			background #0da9e5
			width 100px
			height 4px
			
		> .open-menu
			background url("../images/sandwich-button.svg")
			width 30px
			height 22px
			position: absolute;
			right: 10px;
			top: 39px;
			
		> .slogan
			position absolute
			top: 159px;
			text-align: right;
			right: 9px;
			
			> p 
				color white
				font-size: 35px;
				line-height: 25px;
				font-family "OpenSansLightRegular"
				margin 47px 0px 75px 0px
				letter-spacing: -1px;
				word-spacing: 3px;
				
				> span 
					font-family "OpenSansBoldItalic"
					
			> a.button
				color white
				border: 2px solid white;
				text-transform uppercase
				font-size 15px
				padding 16px 27px
				text-decoration none
				
				> img
					margin-left 10px
					vertical-align middle
		
		> .illustration
			position absolute
			left 80px
			top: 383px;
			height: 267px;
			transition all 1s
			
		> .illustration:hover
			top: 400px;
			height: 284px;

